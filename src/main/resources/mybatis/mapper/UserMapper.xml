<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xyg.st.dao.UserDAO">


    <sql id="findField">
        id,name,pwd,account,age,sex,tel,address,uclass,uteach
    </sql>

    <resultMap id="userMap" type="User">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="account" property="account" />
        <result column="age" property="age" />
        <result column="sex" property="sex" />
        <result column="tel" property="tel" />
        <result column="address" property="address" />
        <result column="uclass" property="uclass" />
        <result column="uteach" property="uteach" />
    </resultMap>

    <select id="findUser" resultType="User" parameterType="int">
        select id,name,account from user where id = #{id}
    </select>


</mapper>